{
  "name": "api-services",
  "version": "0.0.1",
  "description": "API as a Services",
  "repository": "git@github.com:hieudoanm/apis-services.git",
  "author": "hieudoanm <hieumdoan@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:elo": "yarn workspace @apis-services/elo build",
    "build:proxy": "yarn workspace @apis-services/proxy build",
    "build:shared": "yarn workspace @apis-services/shared build",
    "build:vietnam": "yarn workspace @apis-services/vietnam build",
    "build": "yarn build:shared && yarn build:elo && yarn build:proxy && yarn build:vietnam",
    "dev:elo": "yarn workspace @apis-services/elo dev",
    "dev:proxy": "yarn workspace @apis-services/proxy dev",
    "dev:vietnam": "yarn workspace @apis-services/vietnam dev",
    "dev": "concurrently --kill-others-on-fail \"yarn dev:elo\" \"yarn dev:proxy\" \"yarn dev:vietnam\"",
    "test:elo": "yarn workspace @apis-services/elo test",
    "test:proxy": "yarn workspace @apis-services/proxy test",
    "test:shared": "yarn workspace @apis-services/shared test",
    "test:vietnam": "yarn workspace @apis-services/vietnam test",
    "test": "yarn test:shared && yarn test:elo && yarn test:proxy && yarn test:vietnam",
    "prepare": "yarn build:shared",
    "lint": "eslint . --fix --ext .ts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "husky": "^8.0.1",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3"
  },
  "workspaces": [
    "packages/*"
  ]
}
